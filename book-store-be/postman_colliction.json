{
    "info": {
        "name": "Books Shop API",
        "description": "Complete API collection for Books Shop backend with authentication, profile management, and book CRUD operations",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Test User\",\n  \"phoneNumber\": \"+1234567890\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Register a new user account"
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token', response.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"identifier\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login with username/email and password. Token is automatically saved to collection variable."
                    },
                    "response": []
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/auth/logout",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "logout"
                            ]
                        },
                        "description": "Logout current user and invalidate token"
                    },
                    "response": []
                },
                {
                    "name": "Forget Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/forget-password",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "forget-password"
                            ]
                        },
                        "description": "Request password reset OTP (static: 123456)"
                    },
                    "response": []
                },
                {
                    "name": "Reset Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"newpassword123\",\n  \"confirmPassword\": \"newpassword123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/reset-password",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "reset-password"
                            ]
                        },
                        "description": "Reset password using OTP"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Profile",
            "item": [
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "profile"
                            ]
                        },
                        "description": "Get current user profile details"
                    },
                    "response": []
                },
                {
                    "name": "Update Profile",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fullName\": \"John Updated\",\n  \"phoneNumber\": \"+9876543210\",\n  \"username\": \"johnupdated\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "profile"
                            ]
                        },
                        "description": "Update user profile details"
                    },
                    "response": []
                },
                {
                    "name": "Change Password",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword456\",\n  \"confirmPassword\": \"newpassword456\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/profile/change-password",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "profile",
                                "change-password"
                            ]
                        },
                        "description": "Change user password"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Books Shop",
            "item": [
                {
                    "name": "List All Books (Public)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/books?page=1&limit=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "books"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Page number"
                                },
                                {
                                    "key": "limit",
                                    "value": "10",
                                    "description": "Items per page"
                                },
                                {
                                    "key": "search",
                                    "value": "harry",
                                    "description": "Search by title",
                                    "disabled": true
                                },
                                {
                                    "key": "sort",
                                    "value": "asc",
                                    "description": "Sort order (asc, desc)",
                                    "disabled": true
                                },
                                {
                                    "key": "categoryId",
                                    "value": "",
                                    "description": "Filter by category ID",
                                    "disabled": true
                                },
                                {
                                    "key": "minPrice",
                                    "value": "10",
                                    "description": "Minimum price",
                                    "disabled": true
                                },
                                {
                                    "key": "maxPrice",
                                    "value": "50",
                                    "description": "Maximum price",
                                    "disabled": true
                                }
                            ]
                        },
                        "description": "Get all books with pagination, search by title, sorting, and price/category filters (PUBLIC - no authentication required)"
                    },
                    "response": []
                },
                {
                    "name": "Get Book Details (Public)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/books/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "books",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1",
                                    "description": "Book ID (numeric)"
                                }
                            ]
                        },
                        "description": "Get detailed information about a specific book including title, price, thumbnail, author, category, and tags (PUBLIC - no authentication required)"
                    },
                    "response": []
                },
                {
                    "name": "Create Book",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"New Amazing Book\",\n  \"description\": \"This is a great book about amazing things\",\n  \"price\": 29.99,\n  \"thumbnail\": \"https://example.com/book-cover.jpg\",\n  \"authorId\": 1,\n  \"categoryId\": 1,\n  \"tagIds\": [1, 2]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/books",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "books"
                            ]
                        },
                        "description": "Create a new book with title, description, price, category, and tags (requires authentication)"
                    },
                    "response": []
                },
                {
                    "name": "Update Book",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Book Title\",\n  \"price\": 34.99,\n  \"description\": \"Updated description\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/books/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "books",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1",
                                    "description": "Book ID (numeric)"
                                }
                            ]
                        },
                        "description": "Update your own book only (requires authentication and ownership)"
                    },
                    "response": []
                },
                {
                    "name": "Delete Book",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/books/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "books",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1",
                                    "description": "Book ID (numeric)"
                                }
                            ]
                        },
                        "description": "Delete your own book only (requires authentication and ownership)"
                    },
                    "response": []
                },
                {
                    "name": "Get My Books",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/books/me/list?page=1&limit=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "books",
                                "me",
                                "list"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Page number"
                                },
                                {
                                    "key": "limit",
                                    "value": "10",
                                    "description": "Items per page"
                                },
                                {
                                    "key": "search",
                                    "value": "book",
                                    "description": "Search by title",
                                    "disabled": true
                                },
                                {
                                    "key": "sort",
                                    "value": "asc",
                                    "description": "Sort order (asc, desc)",
                                    "disabled": true
                                }
                            ]
                        },
                        "description": "Get all books created by the authenticated user with pagination, search, and sorting by title (PROTECTED - requires authentication)"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Authors",
            "item": [
                {
                    "name": "List Authors",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/authors",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "authors"
                            ]
                        },
                        "description": "Get list of all authors (requires authentication)"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Categories",
            "item": [
                {
                    "name": "List Categories",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/categories",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "categories"
                            ]
                        },
                        "description": "Get list of all categories (requires authentication)"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Upload",
            "item": [
                {
                    "name": "Upload Image",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": []
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/upload/image",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "upload",
                                "image"
                            ]
                        },
                        "description": "Upload an image file (requires authentication). Returns URL to uploaded image."
                    },
                    "response": []
                }
            ]
        }
    ]
}